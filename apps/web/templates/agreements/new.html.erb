<div class="row">
  <h3 class="col s6 offset-s3">Add Agreement</h3>
</div>
<div class="row">
<%=
  form_for :agreement, '/agreements', class: 'col s6 offset-s3' do
  	div class: 'row' do
    div class: 'input input-field' do
      label :url
      text_field :url, class: 'red-text text-lighten-1 font-rem-2'
    end
    end

  	div class: 'row' do
    div class: 'input input-field' do
      label :http_method
      text_field :http_method, class: 'red-text text-lighten-1 font-rem-2'
    end
    end

  	div class: 'row' do
    div class: 'input input-field' do
      label :response
      text_area :response, class: 'materialize-textarea red-text text-lighten-1 font-rem-2'
    end
    end

  	div class: 'row' do
    div class: 'controls' do
      submit 'Create Agreement', class: 'btn waves-effect waves-light light-green darken-1'
    end

    end
  end
%>
</div>

